<Window x:Class="Switch_Power_profile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Switch_Power_profile"
        mc:Ignorable="d"
        Title="Power Manager" Height="500" Width="620" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Background="#FF5EB8D3" SizeToContent="Width">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <!--<ColumnDefinition Width="*" />-->
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Grid.Column="1" Width="150" Height="39" Margin="20" Content="Low Power" FontSize="18" Background="#FF7FEEA8" Click="Button_Click" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Grid.Row="1" Grid.Column="2" Width="150" Height="39" Margin="20" Content="Balanced" FontSize="18" Background="#FFFFC500" Click="Button_Click_1" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Grid.Row="1" Grid.Column="3" Width="150" Height="39" Margin="20" Content="High" FontSize="18" Background="#FFFF3C3C" Click="Button_Click_2" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

        <Label Name="LabelLow" Grid.Column="1" Content="Selected" Grid.Row="2" HorizontalAlignment="Center"  FontFamily="Segoe UI" FontSize="12" Background="#FF7FEEA8" />
        <Label Name="LabelBalanced" Grid.Column="2" Content="Selected" Grid.Row="2" HorizontalAlignment="Center"  FontFamily="Segoe UI" FontSize="12" Background="#FFFFC500" Visibility="Hidden" />
        <Label Name="LabelHigh" Grid.Column="3" Content="Selected" Grid.Row="2" HorizontalAlignment="Center"  FontFamily="Segoe UI" FontSize="12" Background="#FFFF3C3C" Visibility="Hidden" />
        <ListBox Name="ListBoxProcesses" Grid.Row="3" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="2" Margin="20" />
        <Button Grid.Row="3" Grid.Column="3" Width="150" Height="39" Margin="20" Content="Get Processes (refresh)" Click="Button_Click_3"/>
        <Button Grid.Row="4" Grid.Column="3" Width="150" Height="39" Margin="20,0" Content="Add Monitor" Click="Button_Click_3"/>
        <Button Grid.Row="5" Grid.Column="3" Width="150" Height="39" Margin="20" Content="Edit Monitor List" Click="Button_Click_3"/>
    </Grid>
</Window>
